<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	<!-- springmvc 的配置文件，包含网站跳转逻辑 配置-->
	<context:component-scan base-package="com.teaShop" use-default-filters="false">
		<!-- 只扫描控制器 -->
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
	</context:component-scan>
	
	<!-- 上传文件 -->  
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">  
	    <property name="defaultEncoding" value="utf-8"/>  
	    <!-- 最大内存大小 -->  
	    <property name="maxInMemorySize" value="10240"/>  
	    <!-- 最大文件大小，-1为不限制大小 -->  
	    <property name="maxUploadSize" value="-1"/>  
	</bean>
	
	
	
	
	<mvc:annotation-driven>
		<mvc:message-converters>
		 	<bean class="org.springframework.http.converter.StringHttpMessageConverter">
				<property name="supportedMediaTypes">
					<list>
				 		<value>application/json;charset=UTF-8</value>
					</list>
				</property>
			</bean>
		</mvc:message-converters>
	</mvc:annotation-driven>
	<!-- 配置是图解析器，方便页面返回解析 -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/view/"></property>
		<property name="suffix" value=".html"></property>
	</bean>
	
 <mvc:interceptors>
      <mvc:interceptor>  
         <mvc:mapping path="/**" /> 
           <mvc:exclude-mapping path="/*/login1"/>

		  <mvc:exclude-mapping path="/login.html"/>
		  <mvc:exclude-mapping path="/*/register"/>
		  <mvc:exclude-mapping path="/regist.html"/>
		  <mvc:exclude-mapping path="/css/*"/>
             <mvc:exclude-mapping path="/js/*"/> 
             <mvc:exclude-mapping path="/js/*/*"/>
             <mvc:exclude-mapping path="/img/*"/> 
             <mvc:exclude-mapping path="/plugins/*"/> 
             <mvc:exclude-mapping path="/plugins/*/*"/>
		  <mvc:exclude-mapping path="/plugins/*/*/*"/>
		  <bean class="com.teaShop.utils.LoginInterceptor"/>
      </mvc:interceptor> 
 	</mvc:interceptors> 
	
	<!-- 两个标准配置 -->
	<!-- 将springMVC不能处理的请求交给tomcat -->
	<mvc:default-servlet-handler/>
	<!-- 能支持springmvc更高级的功能，如jsp303校验、快捷的ajax。。。映射动态请求 -->
	<mvc:annotation-driven></mvc:annotation-driven>
	
<!-- 	<mvc:resources mapping="js/**" location="/WEB-INF/js/"/>  
    <mvc:resources mapping="css/**" location="/WEB-INF/css/"/>  
    <mvc:resources mapping="img/**" location="/WEB-INF/img/"/>  
    <mvc:resources mapping="plugins/**" location="/WEB-INF/plugins/"/> 
	<mvc:resources mapping="view/**" location="/WEB-INF/view/"/> 
 -->
	
 


</beans>